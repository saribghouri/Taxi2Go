            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"pickup\": \"Sydney Airport, NSW, Australia\",\n  \"dropoff\": \"Circular Quay, Sydney NSW, Australia\",\n  \"vehicleType\": \"Sedan\",\n  \"childSeat\": true,\n  \"wheelchair\": false\n}"
