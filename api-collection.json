            "url": {
              "raw": "{{baseUrl}}/api/booking/create",
              "host": ["{{baseUrl}}"],
              "path": ["api", "booking", "create"]
            }
          }
        },
        {
          "name": "Get Booking by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/booking/:bookingId",
              "host": ["{{baseUrl}}"],
              "path": ["api", "booking", ":bookingId"],
              "variable": [
                {
                  "key": "bookingId",
                  "value": "replace-with-actual-booking-id"
                }
              ]
            }
          }
        }
      ]
    },
