            "url": {
              "raw": "{{baseUrl}}/api/booking/create",
              "host": ["{{baseUrl}}"],
              "path": ["api", "booking", "create"]
            }
          }
        },
        {
          "name": "Create Booking (Cash)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"pickup\": \"Bondi Beach, Sydney NSW\",\n  \"dropoff\": \"Sydney Opera House, Sydney NSW\",\n  \"pickupTime\": \"2026-01-26T14:00:00.000Z\",\n  \"vehicleType\": \"SUV\",\n  \"childSeat\": true,\n  \"wheelchair\": false,\n  \"passengerName\": \"Jane Smith\",\n  \"passengerPhone\": \"+61423456789\",\n  \"passengerEmail\": \"jane.smith@example.com\",\n  \"paymentMethod\": \"cash\"\n}"
