          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/admin/bookings?limit=10&page=1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "bookings"],
              "query": [
                {
                  "key": "limit",
